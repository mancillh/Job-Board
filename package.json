        "mern",
        "job board",
        "react",
        "node",
        "mongodb",
        "express",
        "graphql"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^7.0.0"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "escape-string-regexp": "^5.0.0",
        "joi": "^17.13.3"
    }
}
